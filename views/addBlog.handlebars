<div class="card">
    <h3 class="card-header">Create a New Blog:</h3>
    <form class="form new-blog-form">
      <div class="form-group">
        <label for="blog-title">Blog Title:</label>
        <input class="form-input" type="text" id="blog-title" name="blog-title"/>
      </div>
      <div class="form-group">
        <label for="blog-description">Blog Content:</label>
        <textarea class="form-input" type="text" id="blog-description" name="blog-description" style="height: 300px"/></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
</div>

<script src="/js/blog.js"></script>